<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="@dimen/_4sdp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_anim_banner_bs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:fontFamily="@font/iransansmobilemedium"
            android:scaleType="centerCrop"
            android:text="نام فیلم مورد نظر" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_anim_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/myGreen"
            android:text="تماشا کردن"
            app:icon="@drawable/ic_play" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:fontFamily="@font/iransansmobilemedium"
        android:text="توضیحات:"
        android:textColor="@color/myBlack"
        android:textSize="@dimen/_16sdp" />

    <TextView
        android:id="@+id/txt_anim_description_bs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iransansmobilemedium"
        android:textAlignment="textStart"
        android:textColor="@color/myBlack"
        android:textSize="@dimen/_12sdp" />


</LinearLayout>