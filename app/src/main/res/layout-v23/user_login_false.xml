<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnr_login_empty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        app:srcCompat="@drawable/rabbit_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/iransansmobilemedium"
        android:text="برای ورود و یا ثبت نام، شماره موبایل خود را وارد کنید"
        android:textColor="@color/myGreen"
        android:textSize="@dimen/_12ssp" />

    <EditText
        android:id="@+id/edt_login_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/shape_edittext_phone"
        android:fontFamily="@font/iransansmobilemedium"
        android:hint="شماره موبایل:"
        android:inputType="number"
        android:padding="@dimen/_8sdp"
        android:textSize="@dimen/_12ssp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_4sdp">

        <ProgressBar
            android:id="@+id/progress_code_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/myGray"
            android:indeterminateDrawable="@drawable/progress_bg"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/bg_button_one"
            android:fontFamily="@font/iransansmobilemedium"
            android:text="ورود"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:visibility="visible"
            app:backgroundTint="@color/myGreen" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/iransansmobilelight"
        android:text="شرایط و قوانین استفاده را می پذیرم"
        android:textColor="@color/myGreen"
        android:textSize="@dimen/_12sdp" />


</LinearLayout>