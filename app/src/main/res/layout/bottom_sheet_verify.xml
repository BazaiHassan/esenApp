<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_bg"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp">

    <ImageView
        android:id="@+id/btn_close_bs_verification"
        android:layout_margin="@dimen/_3sdp"
        android:src="@drawable/ic_close"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/_4sdp"
        android:fontFamily="@font/iransansmobilemedium"
        android:text="کد ارسال شده را در این قسمت وارد کنید"
        android:textColor="@color/myGreen"
        android:textSize="@dimen/_16sdp" />

    <EditText
        android:id="@+id/txt_verify_code_bs"
        android:hint="کد یکبار مصرف"
        android:textAlignment="center"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_36sdp"
        android:background="@drawable/shape_edittext_phone"
        android:fontFamily="@font/iransansmobilemedium"
        android:textColor="@color/myGreen"
        android:textSize="@dimen/_12sdp" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_code_verify"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_32sdp"
        android:backgroundTint="@color/myGreen"
        android:fontFamily="@font/iransansmobilemedium"
        android:text="تایید کد"
        android:textAlignment="center"
        app:icon="@drawable/ic_verified"
        app:iconGravity="textStart" />
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progress_code_validation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/myGray"
        android:indeterminateDrawable="@drawable/progress_bg"
        android:visibility="gone" />


</LinearLayout>