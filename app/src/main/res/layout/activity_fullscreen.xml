<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myGreen"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.Esen.FullscreenContainer"
    tools:context=".ui.FullscreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/girl_preview" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/boy_preview" />

    </LinearLayout>

    <TextView
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        android:text="داستان های فارسی"
        android:fontFamily="@font/iransansmobilemedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/white"
        android:text="version 1.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>